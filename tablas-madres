-- Tabla JUGADORES
CREATE TABLE JUGADORES (
  PLAYER_ID INT PRIMARY KEY,
  NAME VARCHAR(50) NOT NULL,
  COUNTRY VARCHAR(50) NOT NULL,
  COUNTRY_ID INT NOT NULL,
  UNIQUE (COUNTRY_ID)
);

-- Tabla APLICACIÃ“N
CREATE TABLE APLICACION (
  APP_ID INT PRIMARY KEY,
  PLAYER_ID INT NOT NULL,
  DOWNLOAD_DATE DATE NOT NULL,
  COUNTRY_APP VARCHAR(50) NOT NULL,
  FOREIGN KEY (PLAYER_ID) REFERENCES JUGADORES(PLAYER_ID)
);

-- Tabla CLUBES
CREATE TABLE CLUBES (
  CLUB_ID INT PRIMARY KEY,
  COUNTRY VARCHAR(50) NOT NULL,
  NAME VARCHAR(50) NOT NULL
);

-- Tabla PLANES
CREATE TABLE PLANES (
  SUSCRIPTION_ID INT PRIMARY KEY,
  N_SUSCRIPTION VARCHAR(50) NOT NULL,
  SERVICE_START_DT DATE NOT NULL,
  SERVICE_END_DT DATE NOT NULL,
  PLAN_ID INT NOT NULL,
  FOREIGN KEY (PLAN_ID) REFERENCES JUGADORES(PLAYER_ID)
);

-- Tabla VIDEO
CREATE TABLE VIDEO (
  VIDEO_ID INT PRIMARY KEY,
  V_NAME VARCHAR(50) NOT NULL,
  QUANTITY TINYINT NOT NULL
);
